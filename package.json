{
  "name": "codfsh",
  "displayName": "codfsh",
  "description": "Tool for integration of sushi interpreter/compiler and hapi validator ",
  "version": "0.0.1",
  "repository": {
		"type": "git",
		"url": "https://github.com/HendrikGematik/codfsh"
	},
  "engines": {
    "vscode": "^1.62.3"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:codfsh.runFhirFsh",
    "onCommand:codfsh.runHapi",
    "onCommand:codfsh.runSushi"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "configuration": {
      "title": "Codfsh",
      "properties": {
        "codfsh.RessourcesFolder": {
          "type": "string",
          "default": "./Resources/",
          "scope": "resource",
          "description": "Specifies the folder path containing folder structure expected by SUSHI for a FSH project."
        },
        "codfsh.HapiValidator.Executable": {
          "type": "string",
          "default": "~/.fhir/validators/validator_cli_v5.6.89.jar",
          "scope": "resource",
          "description": "Specifies the destination of the hapi hapiValidator."
        },
        "codfsh.HapiValidator.sushi-config.path": {
          "type": "string",
          "default": "./Resources/sushi-config.yaml",
          "scope": "resource",
          "description": "Specifies the path to sushi-config.yaml, needed to parse dependencies."
        },
        "codfsh.HapiValidator.Proxy.enabled": {
          "type": "boolean",
          "default": true,
          "scope": "resource",
          "description": "Use proxy"
        },
        "codfsh.HapiValidator.Proxy.ipAddress": {
          "type": "string",
          "default": "192.168.110.10:3128",
          "scope": "resource",
          "description": "Proxy address"
        }
      }
    },
    "commands": [
      {
        "command": "codfsh.runFhirFsh",
        "title": "FHIR Fish the sushi to an HAPI end"
      },
      {
        "command": "codfsh.runSushi",
        "title": "Run Sushi"
      },
      {
        "command": "codfsh.runHapi",
        "title": "Run Hapi validator",
        "icon": "$(play)"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.0.0",
    "@types/js-yaml": "^4.0.5",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.62.3",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "@vscode/test-electron": "^2.2.0",
    "eslint": "^8.28.0",
    "glob": "^8.0.3",
    "mocha": "^10.1.0",
    "ts-loader": "^9.4.1",
    "typescript": "^4.9.3",
    "webpack": "^5.75.0",
    "webpack-cli": "^5.0.0"
  },
  "dependencies": {
    "js-yaml": "^4.1.0"
  }
}
