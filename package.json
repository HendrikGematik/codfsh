{
  "name": "fsh-validator",
  "displayName": "FSH-Validator",
  "description": "Using Sushi and HAPI-Validator to quality check your FHIR ShortHand implementation",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.54.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:fsh-validator.runFhirFsh",
    "onCommand:extension.fsh-validator.getProgramName",
    "onCommand:extension.fsh-validator.runEditorContents",
    "onCommand:extension.fsh-validator.debugEditorContents"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "menus": {
      "editor/title/run": [
        {
          "command": "extension.fsh-validator.runEditorContents",
          "when": "resourceLangId == markdown",
          "group": "navigation@1"
        },
        {
          "command": "extension.fsh-validator.debugEditorContents",
          "when": "resourceLangId == markdown",
          "group": "navigation@2"
        }
      ],
      "commandPalette": [
        {
          "command": "extension.fsh-validator.debugEditorContents",
          "when": "resourceLangId == markdown"
        },
        {
          "command": "extension.fsh-validator.runEditorContents",
          "when": "resourceLangId == markdown"
        }
      ],
      "debug/variables/context": [
        {
          "command": "extension.fsh-validator.toggleFormatting",
          "when": "debugType == 'mock' && debugProtocolVariableMenuContext == 'simple'"
        }
      ]
    },
    "commands": [
      {
        "command": "fsh-validator.runFhirFsh",
        "title": "FHIR Fish the sushi to an HAPI end"
      },
      {
        "command": "extension.fsh-validator.debugEditorContents",
        "title": "Debug File",
        "category": "Mock Debug",
        "enablement": "!inDebugMode",
        "icon": "$(debug-alt)"
      },
      {
        "command": "extension.fsh-validator.runEditorContents",
        "title": "Run File",
        "category": "Mock Debug",
        "enablement": "!inDebugMode",
        "icon": "$(play)"
      },
      {
        "command": "extension.fsh-validator.toggleFormatting",
        "title": "Toggle between decimal and hex formatting"
      }
    ],
    "breakpoints": [
      {
        "language": "markdown"
      }
    ],
    "debuggers": [
      {
        "type": "mock",
        "languages": [
          "markdown"
        ],
        "label": "Mock Debug",
        "program": "./out/debugAdapter.js",
        "runtime": "node",
        "configurationAttributes": {
          "launch": {
            "required": [
              "program"
            ],
            "properties": {
              "program": {
                "type": "string",
                "description": "Absolute path to a text file.",
                "default": "${workspaceFolder}/${command:AskForProgramName}"
              },
              "stopOnEntry": {
                "type": "boolean",
                "description": "Automatically stop after launch.",
                "default": true
              },
              "trace": {
                "type": "boolean",
                "description": "Enable logging of the Debug Adapter Protocol.",
                "default": true
              },
              "compileError": {
                "type": "string",
                "description": "Simulates a compile error in 'launch' request.",
                "enum": [
                  "default",
                  "show",
                  "hide"
                ],
                "enumDescriptions": [
                  "default: show fake compile error to user",
                  "show fake compile error to user",
                  "do not show fake compile error to user"
                ]
              }
            }
          },
          "attach": {
            "required": [
              "program"
            ],
            "properties": {
              "program": {
                "type": "string",
                "description": "Absolute path to a text file.",
                "default": "${workspaceFolder}/${command:AskForProgramName}"
              },
              "stopOnEntry": {
                "type": "boolean",
                "description": "Automatically stop after attach.",
                "default": true
              },
              "trace": {
                "type": "boolean",
                "description": "Enable logging of the Debug Adapter Protocol.",
                "default": true
              },
              "compileError": {
                "type": "string",
                "description": "Simulates a compile error in 'attach' request.",
                "enum": [
                  "default",
                  "show",
                  "hide"
                ],
                "enumDescriptions": [
                  "default: show fake compile error to user",
                  "show fake compile error to user",
                  "do not show fake compile error to user"
                ]
              }
            }
          }
        },
        "initialConfigurations": [
          {
            "type": "mock",
            "request": "launch",
            "name": "Ask for file name",
            "program": "${workspaceFolder}/${command:AskForProgramName}",
            "stopOnEntry": true
          }
        ],
        "configurationSnippets": [
          {
            "label": "Mock Debug: Launch",
            "description": "A new configuration for 'debugging' a user selected markdown file.",
            "body": {
              "type": "mock",
              "request": "launch",
              "name": "Ask for file name",
              "program": "^\"\\${workspaceFolder}/\\${command:AskForProgramName}\"",
              "stopOnEntry": true
            }
          }
        ],
        "variables": {
          "AskForProgramName": "extension.fsh-validator.getProgramName"
        }
      }
    ],
    "viewsContainers": {
      "panel": [
        {
          "id": "fshfails-explorer",
          "title": "Roberts FHIR-Place",
          "icon": "./resources/fhir.svg"
        }
      ]
    },
    "views": {
      "fshfails-explorer": [
        {
          "id": "fshfails-view",
          "name": "fshfails",
          "icon": "./resources/fhir.png"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.0.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@types/path-browserify": "^1.0.0",
    "@types/vscode": "^1.54.0",
    "@typescript-eslint/eslint-plugin": "^5.46.0",
    "@typescript-eslint/parser": "^5.46.0",
    "@vscode/debugadapter": "^1.56.0",
    "@vscode/test-electron": "^2.2.0",
    "@vscode-languageserver-textdocument": "",
    "await-notify": "^1.0.1",
    "base64-js": "^1.5.1",
    "eslint": "^8.28.0",
    "events": "^3.3.0",
    "glob": "^8.0.3",
    "mocha": "^10.1.0",
    "path-browserify": "^1.0.1",
    "typescript": "^4.9.3"
  },
  "dependencies": {
    "@vscode/debugprotocol": "^1.58.0"
  }
}
